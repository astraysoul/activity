@charset "utf-8";
/* CSS Document */
/*#ZgWindow div{
	display: block;
}*/
.bg{
	display:none;
	position:fixed;
	width:100%;
	height:100%;
	background:#000;
	z-index:23;
	top:0;
	left:0;
	opacity:0.7;
}
#ZgWindow {
	visibility: hidden;
	position:absolute;
	top:0;
	right:0;
	z-index:22;
	height:100%;
	width: 100%;
	overflow: hidden;
}
#ZgWindow .Windows {
	position:relative;
	float:right;
	width:600px;
	height:100%;
	margin:0 5px;
}
#ZgWindow .Windows .Cn{
	position:absolute;
	width:100%;
	bottom:0;
	visibility: visible;
	box-shadow:2px 8px 12px 4px rgba(20%,20%,40%,0.5);
}
#ZgWindow .Windows div{
	visibility: visible;
}

#ZgWindow .Windows .Cnn{
	border:1px #696969 solid;
	/*border:1px #FF6600 solid;*/
	background:#FFFFFF;
	height:100%;
}
#ZgWindow .Windows.small{
	width:300px;
}
#ZgWindow .Windows.big{
	position:absolute;
	/*top:50%;
	left:50%;*/
	width:95%;
	height:90%;
	margin:0 auto;
}
#ZgWindow .Windows.big .Cn{
	height:100%;
}

#ZgWindow .Windows .WinTitle{
	z-index:-1;
	position:absolute;
	margin-top:-32px;
	left:0;
	width:100%;
	background:#696969;
	color:#FFFFFF;
	padding:8px;
	font-size:14px;
	box-shadow:2px 4px 12px 4px rgba(20%,20%,40%,0.5);
}
 #ZgWindow .Windows .WinTitle .tool{
	width: 85px;
	position: absolute;
	right: 0;
}
#ZgWindow .Windows .WinTitle .tool > div{
	margin:0 5px;
	cursor:pointer;
}
#ZgWindow .Windows .WinTitle .tool > div:hover{
	background:#7EB77E;
}
#ZgWindow .Windows .WinContent{
	height:500px;
	background:#FFFFFF;
	
}
#ZgWindow .Windows.big .WinContent{
	height:100%;
}